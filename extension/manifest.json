{
  "name": "Basketball Brilliant",
  "description": "Learn jargon while watching basketball games",
  "version": "1.0",
  "manifest_version": 2,
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "permissions": [
    "webNavigation",
    "tabs",
    "notifications",
    "https://www.espn.com/*"
  ],
  "browser_action": {
    "default_icon": {
      "16": "/images/logo.png",
      "32": "/images/logo.png",
      "48": "/images/logo.png",
      "128": "/images/logo.png"
    }
  },
  "icons": {
    "16": "/images/logo.png",
    "32": "/images/logo.png",
    "48": "/images/logo.png",
    "128": "/images/logo.png"
  }
}
